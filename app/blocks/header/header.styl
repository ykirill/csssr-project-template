.header
	display block

	padding-y(70px)
	clearfix()

	+between(1, 3)
		padding-y(30px)

.header__logo, .header__nav
	float left

.header__logo
	width 45%
	+between(1, 3)
		width 100%

		text-align center

		margin-bottom 20px

.header__nav
	width 55%
	+between(1, 3)
		width 100%


.logotype

	&__link
		text-transform uppercase
		letter-spacing 4px

		font-family font-cute
		font-size fs-large
