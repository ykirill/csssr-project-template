.preview
	// TODO inline block isn't usefull property in this case, rewrite
	display inline-block

	position relative

	width 46.5%

	font-size fs-normal

	&:nth-child(2n)
		margin-left 7%


	+between(1, 3)
		width 100%

		&:nth-child(2n)
			margin-left 0

	&__inner
		width 100%
	// TODO rework it fucking copy-pasted code, do DRY
	&__cover
		width 100%

		margin-bottom 20px

		& > img
			width 100%

	&__header
		display block

		margin-bottom 40px


	&__tag
		margin-bottom 20px

	&__title
		margin-bottom 20px

	&__body
		display block

		margin-bottom 60px

		max-height 63px

		overflow hidden

		& > p
			font-size fs-normal
			line-height 1.7rem

			margin-bottom 1.7rem
